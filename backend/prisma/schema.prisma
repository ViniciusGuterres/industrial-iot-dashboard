generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model machines {
  id          String      @id // ROBOT_ARM_01
  name        String
  type        String
  location    String?
  createdAt   DateTime @default(now())
}

model telemetry {
  id         Int      @id @default(autoincrement())
  machineId  String
  sensorType String
  value      Float
  createdAt   DateTime @default(now())

  @@index([machineId, createdAt])
}

model incidents {
  id          Int      @id @default(autoincrement())
  machineId   String
  description String
  severity    String
  createdAt   DateTime @default(now())

  @@index([severity, createdAt])
}